{
  "manifest_version": 3,
  "name": "NEAR wallet Extensions",
  "description": "NEAR Protocol 블록제인 지갑",
  "version": "0.1",
  "permissions": ["storage", "background"],
  "action": {
    "default_title": "NEAR Wallet",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo.png",
      "32": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    },
    "icons": {
      "16": "logo.png",
      "32": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "background": {
    "service_worker": "static/js/background.js",
    "type": "module"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
